<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_game_instance"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/grass"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.cs245stackunderflow.stackunderflow.GameInstance"
    tools:showIn="@layout/activity_game_instance">


    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scoreBox"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/ScoreText"
        android:layout_alignRight="@+id/endgame"
        android:layout_alignEnd="@+id/endgame"
        android:background="@android:color/white"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:layout_alignLeft="@+id/endgame"
        android:layout_alignStart="@+id/endgame" />

    <Button
        android:text="MUSIC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/musicBtn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/endgame"
        android:layout_alignStart="@+id/endgame" />

    <Button
        android:text="Try Again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tryagain"
        android:layout_below="@+id/scoreBox"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/newgame"
        android:layout_alignStart="@+id/newgame" />

    <Button
        android:text="End Game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/endgame"
        android:layout_above="@+id/musicBtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ScoreText"
        android:backgroundTint="@android:color/white"
        android:background="@android:color/white"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/scoreBox"
        android:layout_alignStart="@+id/scoreBox" />

    <GridLayout
        android:layout_width="250dp"
        android:layout_height="450dp"
        android:id="@+id/thegrid"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/newgame"
        android:layout_toStartOf="@+id/newgame">

    </GridLayout>

    <Button
        android:text="New Game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newgame"
        android:layout_above="@+id/endgame"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>


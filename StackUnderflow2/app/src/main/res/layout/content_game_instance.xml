<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_game_instance"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.cs245stackunderflow.stackunderflow.GameInstance"
    tools:showIn="@layout/activity_game_instance">


    <Button
        android:text="End Game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:id="@+id/endgame"
        android:layout_alignBottom="@+id/thegrid"
        android:layout_alignLeft="@+id/tryagain"
        android:layout_alignStart="@+id/tryagain" />

    <GridLayout
        android:layout_width="200dp"
        android:layout_height="450dp"
        android:id="@+id/thegrid"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/newgame"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </GridLayout>

    <TextView
        android:text="Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ScoreText"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/endgame"
        android:layout_alignEnd="@+id/endgame" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scoreBox"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/ScoreText"
        android:layout_alignRight="@+id/endgame"
        android:layout_alignEnd="@+id/endgame"
        android:layout_alignLeft="@+id/ScoreText"
        android:layout_alignStart="@+id/ScoreText" />

    <Button
        android:text="Try Again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tryagain"
        android:layout_below="@+id/scoreBox"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="13dp" />

    <Button
        android:text="New Game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newgame"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/endgame"
        android:layout_alignEnd="@+id/endgame" />
</RelativeLayout>

